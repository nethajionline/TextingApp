<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip" >

    <!--  ListRow Left sied Thumbnail image -->
    <LinearLayout android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dip"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="5dip">

     <ImageView
      android:id="@+id/list_image"
      android:layout_width="50dip"
      android:layout_height="50dip"
      android:background="@drawable/image"/>


</LinearLayout>

<!-- Title Of Song-->
    <TextView
        android:id="@+id/textViewSMSSender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toEndOf="@+id/thumbnail"
        android:text="0000000000"
        android:textColor="#040404"
        android:typeface="sans"
        android:textSize="10dip"
        android:textStyle="bold"/>

    <!-- Artist Name -->
    <TextView
        android:id="@+id/textViewMessageBody"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@id/textViewSMSSender"
        android:textColor="#343434"
        android:textSize="15dip"
        android:layout_marginTop="1dip"
        android:layout_toEndOf="@+id/thumbnail"
        android:text="Your Message will appear here" />

    <!-- Rightend Duration -->
    <TextView
        android:id="@+id/receivedTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/textViewSMSSender"
        android:gravity="right"
        android:text="5:45"
        android:layout_marginEnd="5dip"
        android:textSize="7dip"
        android:textColor="#10bcc9"
        android:textStyle="bold"/>

    <CheckBox
        android:id="@+id/deletecheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"


        />
